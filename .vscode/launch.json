{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run current TS file",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}"
      ],
      "runtimeArgs": [
        "--require",
        "tsconfig-paths/register",
        "--require",
        "ts-node/register"
      ],
      "outputCapture": "std",
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}