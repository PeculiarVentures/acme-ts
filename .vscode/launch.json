{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test all files",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts",
        "--colors"
      ],
      "env": {
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      },
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Run current TS file",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}"
      ],
      "runtimeArgs": [
        "--require",
        "tsconfig-paths/register",
        "--require",
        "ts-node/register"
      ],
      "outputCapture": "std",
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}